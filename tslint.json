{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/*.d.ts"
    ]
  },
  "rules": {
    "arrow-parens": false,
    // Custom
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": false,
    "import-destructuring-spacing": false,
    "member-access": false,
    "radix": false,
    "no-empty-interface": false,
    "no-empty": false,
    // General
    "no-console": [
      true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      120
    ],
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
